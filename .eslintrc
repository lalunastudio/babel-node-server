{
  "extends": ["airbnb/base", "plugin:flowtype/recommended"],
  "ecmaFeatures": {
    "modules": true,
    "jsx": false
  },
  "plugins": [
    "flowtype"
  ],
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "class-methods-use-this": 0,
    "import/no-extraneous-dependencies": 0,
    "import/extensions": ['off', 'never'],
    "import/no-named-as-default": [0],
    "import/no-named-as-default-member": [0],
    "no-underscore-dangle": [0],
    "no-return-assign": [0],
    "no-confusing-arrow": [0],
    "no-param-reassign": [0],
    "no-irregular-whitespace": [2, { "skipComments": true, "skipStrings": true, "skipTemplates": true }],
    "no-console": [0]
  },
  "globals": {
  }
}
